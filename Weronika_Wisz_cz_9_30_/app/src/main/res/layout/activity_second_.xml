<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/currencyDetailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/todayRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="32sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/todayRateText" />

            <TextView
                android:id="@+id/yesterdayRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="32sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/yesterdayRateText" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/historicRatesChart"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_marginBottom="32sp"
                android:layout_weight="4">

            </com.github.mikephil.charting.charts.LineChart>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/historicRatesChart7"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_weight="4">

            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>